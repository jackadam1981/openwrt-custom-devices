# Hiker RT5350 配置 v0.4
# 完整版：v0.3 + WiFi AP
# = LuCI 中文 + P910ND + WiFi 完整（客户端 + AP）
# 保留：基础防火墙（LuCI需要）
# 移除：PPPoE

#
# Target System
#
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_rt305x=y
CONFIG_TARGET_ramips_rt305x_DEVICE_hiker_hiker-full-wifi=y
CONFIG_TARGET_MULTI_PROFILE=n
CONFIG_TARGET_PER_DEVICE_ROOTFS=y

#
# Root filesystem
#
CONFIG_TARGET_ROOTFS_SQUASHFS=y

#
# Base system (精简版，与p910nd一致)
#
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_kmod-leds-gpio=y
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_mtd=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_urandom-seed=y

#
# LuCI Web 界面（最小化）
#
CONFIG_PACKAGE_luci-light=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_uhttpd=y

#
# 中文语言包
#
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

#
# USB 打印机（from v0.2）
#
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-printer=y

#
# LuCI 应用
#
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-i18n-opkg-zh-cn=y
CONFIG_PACKAGE_luci-app-system=y
CONFIG_PACKAGE_luci-i18n-system-zh-cn=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y

#
# 防火墙支持（LuCI需要）
#
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_kmod-nft-offload=y

#
# P910ND 打印服务器（from v0.2）
#
CONFIG_PACKAGE_p910nd=y
CONFIG_PACKAGE_luci-app-p910nd=y
CONFIG_PACKAGE_luci-i18n-p910nd-zh-cn=y

#
# WiFi 完整支持（客户端 + AP）
#
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_kmod-rt2800-lib=y
CONFIG_PACKAGE_kmod-rt2800-mmio=y
CONFIG_PACKAGE_kmod-rt2800-soc=y
CONFIG_PACKAGE_kmod-rt2x00-lib=y
CONFIG_PACKAGE_kmod-rt2x00-mmio=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_hostapd=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y

#
# 移除不需要的功能
#
# DHCP/DNS（不需要）
# CONFIG_PACKAGE_dnsmasq is not set
# CONFIG_PACKAGE_odhcpd-ipv6only is not set

# PPP/PPPoE（不需要）
# CONFIG_PACKAGE_ppp is not set
# CONFIG_PACKAGE_ppp-mod-pppoe is not set

